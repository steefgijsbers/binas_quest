<% provide :title, @levelpack.title %>

<div class="row">
	<% if current_user.admin? %>
		<%= render 'admin_sidebar'%>
	<% end %>

	
	<% if current_user.containing? @levelpack %>
		<% unless @levels.blank? %>
			<div class="span8">
				<h2><%= @levelpack.title %></h2>
				<section id="levelpack_thumbs">
					<%= render 'levelpack_thumbs' %>
				</section>
				<section id="level_image">
					<%= image_tag(@level.img_src) %>
				</section>
				<section id="enter_solution_form">
					<%= render 'enter_solution_form' %>
				</section>		
			</div>
		<% end %>
	<% else %>
		<h3>Je hebt dit levelpack nog niet unlocked</h3>	
	<% end %>

</div>
