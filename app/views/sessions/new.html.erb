<% provide :title, 'Log in' %>

<h1>Log in</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :password, "Wachtwoord" %>
			<%= f.password_field :password %>
			
			<%= f.submit "Log in", class: "btn btn-large btn-primary" %>
		<% end %>
		
		<p>Ben je nieuw bij de Binas Quest? <%= link_to "Registreer dan nu!", registreer_path %></p>		
	</div>
</div>
